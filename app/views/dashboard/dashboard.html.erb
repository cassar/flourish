<% content_for :title, 'Dashboard'  %>
<article>
  <p><b>Dashboard:</b></p>
  <ul>
  <li><b>Total Pool</b>: <%= @total_pool %></li>
  <%= turbo_stream_from 'member_count' %>
  <li><b>Member Count</b>: <%= render partial: 'member_count' %></li>
  </ul>
</article>
<article>
  <p><b>Next Distribution:</b></p>
  <ul>
    <li><b>Date:</b> <%= next_distribution_date_formatted %></li>
    <li><b>Dividend Amount</b>: <%= @next_dividend_amount_formatted %> per member</li>
  </ul>
</article>
<%= render partial: 'details' %>
<nav>
  <%= link_to distributions_path, class: 'button' do %>
    Distributions
  <% end %>
  <%= render partial: 'authentication' %>
</nav>
