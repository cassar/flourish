<article>
  <p><b>Distribution <%= @next_distribution.name %> Preview</b></p>
  <ul>
    <li><b>Date:</b> <%= @next_distribution.date_formatted %></li>
    <li><b>Total Contributions:</b> <%= @next_distribution.total_pool_formatted %></li>
    <li><b>Members:</b> <%= @next_distribution.member_count %></li>
    <li><b>Dividend:</b> <%= @next_distribution.dividend_amount_formatted %></li>
  </ul>
  <a><%= link_to "View Past Distributions", distributions_url %></a>
</article>
<article>
  <p><b>Weekly Expenses Deducted from the Pool</b></p>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.name %></td>
          <td><%= expense.amount_formatted %></td>
        </tr>
      <% end %>
      <tr>
        <td><b>Total</b></td>
        <td><b><%= @total_expenses_formatted %></b></td>
      </tr>
    </tbody>
  </table>
</article>
