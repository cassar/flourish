<% content_for :title, 'Distributions'  %>
<h1>Distributions</h1>
<%= render partial: 'details' %>
<% if @distributions.any? %>
  <% @distributions.each do |distribution| %>
    <article>
      <p><b>Date</b>: <%= created_at_formatted distribution %></p> 
      <ul>
        <li><b>Dividend</b>: <%= distribution.dividend_amount_formatted %></li>
        <li><b>Members</b>: <%= distribution.dividends.length %></li>
        <li><b>Status</b>: <%= distribution_status dividend_statuses: distribution.dividends.pluck(:status) %></li>
        <% disaggregate_status_counts = distribution.dividends.group(:status).count %>
        <% if (aggregate_status_counts = aggregate_status_counts(disaggregate_status_counts)).any? %>
          <ul>
            <% aggregate_status_counts.each do |aggregate_status, count| %>
              <li><%= aggregate_status.titleize %>: <%= count %></li>
            <% end %>
          </ul>
        <% end %>
      </ul>
    </article>
  <% end %>
<% else %>
  <article>
    <p>Distributions will appear here.</p>
  </article>
<% end %>
