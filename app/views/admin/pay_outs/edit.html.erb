<% content_for :title, "Admin" %>
<h1>Dividend Payout</h1>
<article>
  <p><b>Date</b>: <%= created_at_formatted @dividend %></p> 
  <ul>
    <li><b>Amount</b>: <%= @amount.amount_formatted %></li>
    <li><b>Status</b>: <%= @dividend.status.titleize %></li>
    <li data-controller="clipboard"><strong>Note:</strong> "<span data-clipboard-target="source">Flourish Distribution <%= @distribution.name %> Dividend</span>" <a href="#" data-action="clipboard#copy" style="text-decoration: none">ðŸ“‹</a></li>
    <li><b>PayPal.Me URL</b>: <%= link_to @member.paypalme_handle, paypalme_url(paypalme_handle: @member.paypalme_handle, amount_in_base_units: @amount.amount_in_base_units), target: "_blank" %></li>
  </ul>
  <%= form_with model: @pay_out, url: admin_pay_out_path, data: { turbo: false } do |form| %>
    <article>
      <p><span>Transaction Identifier</span>: <%= form.text_field :transaction_identifier %></p>
    </article>
    <%= form.submit "Submit" %>
  <% end %>
</article>
